---
import { Image } from "astro:assets";

const { name, icon } = Astro.props;
---

<div class="relative">
    <input
        type="text"
        placeholder={name}
        class="lg:min-w-[70vh] md:min-w-[60vh] min-w-[36vh] rounded-md border-b-2 border-black p-2"
    />
    {
        icon ? (
            <Image
                src="/icons/mdi--calendar.svg"
                class="absolute right-0 top-3 cursor-pointer hover:opacity-50 duration-300"
                alt=""
                width={20}
                height={20}
            />
        ) : null
    }
</div>
